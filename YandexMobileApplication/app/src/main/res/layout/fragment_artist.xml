<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/artist_cover_big"
            style="@style/CoverBig" />

        <RelativeLayout
            android:id="@+id/artist_rl"
            style="@style/Artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/artist_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="?android:textColorSecondary" />

            <TextView
                android:id="@+id/artist_albums"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/artist_genres"
                android:gravity="center"
                android:textColor="?android:textColorSecondary" />

            <TextView
                android:id="@+id/artist_dot"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_below="@+id/artist_genres"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/artist_albums"
                android:gravity="center_horizontal"
                android:text="@string/dot"
                android:textColor="?android:textColorSecondary" />

            <TextView
                android:id="@+id/artist_tracks"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/artist_genres"
                android:layout_toRightOf="@+id/artist_dot"
                android:gravity="center"
                android:textColor="?android:textColorSecondary" />

            <TextView
                android:id="@+id/artist_biography"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/artist_albums"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="@string/biography_capital"
                android:textColor="?android:textColorPrimary" />

            <TextView
                android:id="@+id/artist_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/artist_biography"
                android:textColor="?android:textColorPrimary" />

            <TextView
                android:id="@+id/artist_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/artist_description"
                android:textColorLink="@color/textLinkColor"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>