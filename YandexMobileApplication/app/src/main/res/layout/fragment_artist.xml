<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/artist_cover_big"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/load_holder" />

    <RelativeLayout
        android:id="@+id/artist_rl"
        style="@style/Artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/artist_genres"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="dance, electronic" />

        <TextView
            android:id="@+id/artist_albums"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/artist_genres"
            android:text="5 альбомов" />

        <TextView
            android:id="@+id/artist_dot"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_below="@+id/artist_genres"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/artist_albums"
            android:text="@string/dot" />

        <TextView
            android:id="@+id/artist_tracks"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/artist_genres"
            android:layout_toRightOf="@+id/artist_dot"
            android:text="44 песни" />

        <TextView
            android:id="@+id/artist_biography"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/artist_albums"
            android:text="@string/biography_capital" />

        <TextView
            android:id="@+id/artist_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/artist_biography"
            android:text="description" />

    </RelativeLayout>
</LinearLayout>